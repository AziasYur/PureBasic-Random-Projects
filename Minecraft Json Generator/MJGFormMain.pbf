Global Window_MJG_Main

Global Frame_0, Button_Main_Blocks, Image_Main_Grass, Frame_1, Image_Main_Apple, Button_Main_Items

Global Img_Window_MJG_Main_0, Img_Window_MJG_Main_1

Enumeration FormMenu
  #MenuItem_NewBlock
  #MenuItem_NewItem
  #MenuItem_OpenOutput
  #MenuItem_Main_Exit
  #MenuItem_Main_About
EndEnumeration

UsePNGImageDecoder()

Img_Window_MJG_Main_0 = LoadImage(#PB_Any,".\grass.png")
Img_Window_MJG_Main_1 = LoadImage(#PB_Any,".\apple.png")

Declare MenuItem_OpenOutputEvent(Event)
Declare MenuItem_AboutEvent(Event)
Declare MenuItem_ExitEvent(Event)
Declare Button_OpenItemsEvent(EventType)

Procedure OpenWindow_MJG_Main(x = 0, y = 0, width = 180, height = 170)
  Window_MJG_Main = OpenWindow(#PB_Any, x, y, width, height, "Json Generator 1.0", #PB_Window_SystemMenu | #PB_Window_ScreenCentered)
  CreateMenu(0, WindowID(Window_MJG_Main))
  MenuTitle("File")
  MenuItem(#MenuItem_NewBlock, "New Block")
  MenuItem(#MenuItem_NewItem, "New Item")
  MenuBar()
  MenuItem(#MenuItem_OpenOutput, "Open Output")
  MenuBar()
  MenuItem(#MenuItem_Main_Exit, "Exit")
  MenuTitle("Help")
  MenuItem(#MenuItem_Main_About, "About")
  Frame_0 = FrameGadget(#PB_Any, 15, 10, 155, 55, "")
  Button_Main_Blocks = ButtonGadget(#PB_Any, 40, 30, 105, 22, "Blocks")
  Image_Main_Grass = ImageGadget(#PB_Any, 5, 5, 32, 32, ImageID(Img_Window_MJG_Main_0))
  Frame_1 = FrameGadget(#PB_Any, 15, 80, 155, 55, "")
  Image_Main_Apple = ImageGadget(#PB_Any, 5, 70, 32, 32, ImageID(Img_Window_MJG_Main_1))
  Button_Main_Items = ButtonGadget(#PB_Any, 40, 100, 105, 22, "Items")
EndProcedure

Procedure Window_MJG_Main_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
        Case #MenuItem_NewBlock
        Case #MenuItem_NewItem
        Case #MenuItem_OpenOutput
          MenuItem_OpenOutputEvent(EventMenu())
        Case #MenuItem_Main_Exit
          MenuItem_ExitEvent(EventMenu())
        Case #MenuItem_Main_About
          MenuItem_AboutEvent(EventMenu())
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
        Case Button_Main_Items
          Button_OpenItemsEvent(EventType())          
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure


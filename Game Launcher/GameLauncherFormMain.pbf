Global Window_Launcher_Main

Global WebView_Main, Button_Play, Button_Options

Declare Button_PlayEvent(EventType)
Declare Button_OptionsEvent(EventType)

Procedure OpenWindow_Launcher_Main(x = 0, y = 0, width = 800, height = 520)
  Window_Launcher_Main = OpenWindow(#PB_Any, x, y, width, height, "", #PB_Window_SystemMenu | #PB_Window_ScreenCentered)
  WebView_Main = WebGadget(#PB_Any, 0, 0, 480, 270, WebViewUrl)
  DisableGadget(WebView_Main, 1)
  Button_Play = ButtonGadget(#PB_Any, 360, 470, 80, 30, "Play")
  Button_Options = ButtonGadget(#PB_Any, 20, 450, 90, 30, "Options")
EndProcedure

Procedure Window_Launcher_Main_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
        Case Button_Play
          Button_PlayEvent(EventType())          
        Case Button_Options
          Button_OptionsEvent(EventType())          
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure

